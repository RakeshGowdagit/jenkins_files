pipeline {
    agent none
    environment {
        TEST="test variable"
    }
    parameters {
        string(name: 'BRANCH_NAME', defaultValue: 'main', description: 'Name of the branch to build')
    }
    stages {
        stage('Build') {
            agent {
                label 'slave_1'
            }
            steps {
                sh '''
                sleep 5
                echo $TEST
            '''
            }

        }
        stage('Build1') {
             agent {
                label 'slave2'
            }
            steps {
                sh 'echo ${params.BRANCH_NAME}'
            }
        }
        stage('Test') {
            agent any
            steps {
                sh '''
                #!/bin/bash
                ls -lrt
                sleep 5
            '''    
            }
        }
        stage('Test2') {
             agent {
                label 'slave_1'
            }
            steps {
                sh '''
                #!/bin/bash
                ls -lrt
                sleep 5
            '''    
            }
            
        }
    }
}
