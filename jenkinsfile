pipeline {
    agent none
    stages {
        stage('Build') {
            agent {
                label 'slave_1'
            }
            steps {
                sh 'sleep 15'
            }

        }
        stage('Build1') {
             agent {
                label 'slave2'
            }
            steps {
                sh 'sleep 15'
            }
        }
        stage('Test') {
            agent any
            steps {
                sh '''
                #!/bin/bash
                ls -lrt
                sleep 15
            '''    
            }
        }
        stage('Test2') {
             agent {
                label 'slave_1'
            }
            steps {
                sh '''
                #!/bin/bash
                ls -lrt
                sleep 15
            '''    
            }
            
        }
    }
}
